{% extends "layout_inner.twig" %}
{% block body_inner %}
    <section class="wrapper">
        <section class="page_head">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <h2>{{ flat.rooms }}-комнатная квартира №{{ flat.flat_num }}</h2>
                        <nav id="breadcrumbs">
                            <ul>
                                <li><a href="/">Главная</a></li>
                                <li><a href="/flat?rooms={{ flat.rooms }}">{{ flat.rooms }}-комнатные квратиры</a></li>
                                <li>№{{ flat.flat_num }}</li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </section>

        <div class="container">
            <div class="row sub_content">
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th></th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>Статус:</td>
                            <td class="t-bold">&bull; {{ flat.status }}</td>
                        </tr>
                        <tr>
                            <td>Очередь:</td>
                            <td>{{ flat.address }}</td>
                        </tr>
                        <tr>
                            <td>Этаж:</td>
                            <td>{{ flat.floor }}</td>

                        </tr>
                        <tr>
                            <td>№ квартиры:</td>
                            <td>{{ flat.flat_num }}</td>

                        </tr>
                        <tr>
                            <td>Площадь общая:</td>
                            <td>{{ flat.area_overall|number_format(1,',') }} м²</td>

                        </tr>
                        <tr>
                            <td>Цена договора,включая доп. платеж*:</td>
                            <td class="nowrap">{{ flat.price_overall|number_format(2,',',' ') }}</td>

                        </tr>
                        <tr>
                            <td>Цена с максимальной скидкой*:</td>
                            <td class="nowrap hl-pink">
                                <i class="fa fa-bullhorn"></i>&nbsp;{{ (flat.price_m * flat.area_overall)|number_format(2,',',' ') }}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>

                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="serviceBox_4">
                        <div class="service_4_img">
                            <a href="/image/kv-{{ flat.id }}.jpg" class="mfp-image">
                                <img alt="" src="/image/kv-{{ flat.id }}.jpg" onerror="imageerror(this)">
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-2 col-md-2 col-sm-2">
                    <div class="serviceBox_4">
                        <div class="service_4_img">
                            <a href="/image/gp-{{ flat.address_id }}.jpg" class="mfp-image">
                                <img alt="" src="/image/gp-{{ flat.address_id }}.jpg" onerror="imageerror(this)">
                            </a>
                        </div>
                    </div>
                    <div class="serviceBox_4">
                        <div class="service_4_img">
                            <a href="/image/kv-{{ flat.id }}-floor.jpg" class="mfp-image">
                                <img alt="" src="/image/kv-{{ flat.id }}-floor.jpg" onerror="imageerror(this)">
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row sub_content">
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <button type="button" class="btn btn-default btn-block">
                        <i class="fa fa-print"></i>
                        Печать
                    </button>
                </div>
                {% if similar|length > 0 %}
                    <div class="col-lg-8 col-md-8 col-sm-8">
                        <div class="col-lg-12 col-md-12 col-sm-12">{% include "_inc/similar.twig" %}</div>
                    </div>
                {% endif %}
            </div>
        </div>
    </section>
{% endblock %}
