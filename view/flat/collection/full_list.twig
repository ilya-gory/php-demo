<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Очередь</th>
        <th>Статус</th>
        <th>Этаж</th>
        <th>№ квартиры</th>
        <th>Комнат</th>
        <th>Цена</th>
        <th>&nbsp;</th>
    </tr>
    </thead>
    <tbody>
    {% for flat in flatList %}
        <tr>
            <td>{{ flat.address }}</td>
            <td>{{ flat.status }}</td>
            <td>{{ flat.floor }}</td>
            <td>{{ flat.flat_num }}</td>
            <td>{{ flat.rooms }}</td>
            <td>
                {% if flat.price_m_a %}
                    {{ (flat.price_m_a * flat.area_overall + flat.price_add)|number_format(2,',',' ') }}
                {% else %}
                    {{ (flat.price_m * flat.area_overall + flat.price_add)|number_format(2,',',' ') }}
                {% endif %}
            </td>
            <td><a href="/flat/{{ flat.id }}"><i class="fa fa-chevron-circle-right"></i></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>